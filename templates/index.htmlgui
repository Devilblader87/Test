<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>CS1.6 RCON Admin Panel</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet"/>
  <style>
    .console { font-family: 'Courier New', monospace; background: #1a202c; color: #e2e8f0; }
    .scrollbar-hide::-webkit-scrollbar { display: none; }
    .command-btn:hover { transform: translateY(-2px); box-shadow: 0 4px 6px rgba(0,0,0,0.1); }
  </style>
</head>
<body class="bg-gray-900 text-gray-100 min-h-screen">
  <div class="container mx-auto px-4 py-8 space-y-6">
    <header class="flex flex-col md:flex-row justify-between items-center">
      <div class="flex items-center space-x-3">
        <i class="fas fa-bomb text-yellow-500 text-3xl"></i>
        <h1 class="text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-yellow-500 to-yellow-300">
          CS1.6 RCON Admin Panel
        </h1>
      </div>
      <span id="connection-status" class="px-3 py-1 rounded-full bg-red-500 text-sm font-semibold">Disconnected</span>
    </header>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <div class="bg-gray-800 rounded-xl p-6 shadow-lg">
        <h2 class="text-xl font-semibold mb-4 flex items-center"><i class="fas fa-server mr-2 text-blue-400"></i> Server Settings</h2>
        <form id="server-form" method="POST">
          <div class="space-y-4">
            <div>
              <select name="server" id="profile" class="w-full px-3 py-2 bg-gray-700 rounded-lg" onchange="loadProfile()">
                <option value="">-- Select --</option>
                {% for name in servers %}
                  <option value="{{name}}">{{name}}</option>
                {% endfor %}
              </select>
            </div>
            <div>
              <input name="new_name" id="new_name" class="w-full px-3 py-2 bg-gray-700 rounded-lg" placeholder="New profile name">
              <button id="save-profile" type="submit" formaction="/" class="mt-2 w-full bg-yellow-600 hover:bg-yellow-700 py-2 rounded-lg flex items-center justify-center">
                <i class="fas fa-save mr-2"></i> Save Profile
              </button>
            </div>
            <div><input name="host" id="host" class="w-full px-3 py-2 bg-gray-700 rounded-lg" placeholder="Server IP"></div>
            <div><input name="port" id="port" type="number" class="w-full px-3 py-2 bg-gray-700 rounded-lg" placeholder="Port"></div>
            <div><input name="password" id="password" type="password" class="w-full px-3 py-2 bg-gray-700 rounded-lg" placeholder="RCON Password"></div>
          </div>
        </form>
      </div>

      <div class="bg-gray-800 rounded-xl p-6 shadow-lg">
        <h2 class="text-xl font-semibold mb-4 flex items-center"><i class="fas fa-bolt mr-2 text-green-400"></i> Quick Commands</h2>
        <div class="grid grid-cols-2 gap-3">
          {% set quick = [
              ('status','Status','fa-info-circle'),
              ('map de_dust2','Dust2','fa-map-marked-alt'),
              ('sv_restart 1','Restart','fa-sync-alt'),
              ('changelevel de_inferno','Inferno','fa-map'),
              ('kick USERID','Kick','fa-user-slash'),
              ('banid 30 USERID kick','Ban Player','fa-ban')
          ] %}
          {% for cmd,label,fa in quick %}
          <button formaction="/" formmethod="POST" name="command" value="{{cmd}}" class="command-btn bg-gray-700 text-white p-3 rounded-lg flex flex-col items-center">
            <i class="fas {{fa}} text-xl mb-1"></i><span>{{label}}</span>
          </button>
          {% endfor %}
        </div>
      </div>

      <!-- Player list remains empty - placeholder -->
      <div class="bg-gray-800 rounded-xl p-6 shadow-lg">
        <h2 class="text-xl font-semibold mb-4 flex items-center justify-between">
          <span><i class="fas fa-users mr-2 text-purple-400"></i> Players</span>
          <button id="refresh-players" class="text-sm bg-gray-700 hover:bg-gray-600 px-3 py-1 rounded">
            <i class="fas fa-sync-alt mr-1"></i> Refresh
          </button>
        </h2>
        <div id="players-container" class="max-h-64 overflow-y-auto scrollbar-hide text-gray-400 text-sm">
          <div class="text-center py-8"><i class="fas fa-user-clock text-3xl mb-2"></i><p>No players<br>connected</p></div>
        </div>
      </div>
    </div>

    <div class="bg-gray-800 rounded-xl p-6 shadow-lg">
      <h2 class="text-xl font-semibold mb-4 flex items-center"><i class="fas fa-terminal mr-2 text-yellow-400"></i> Custom Command</h2>
      <form method="POST" action="/">
        <div class="flex gap-3">
          <input name="command" id="custom-cmd" type="text" placeholder="mp_timelimit 30"
                 class="flex-grow px-4 py-3 bg-gray-700 rounded-lg">
          <button type="submit" id="send-custom" class="bg-green-600 hover:bg-green-700 px-6 py-3 rounded-lg flex items-center">
            <i class="fas fa-paper-plane mr-2"></i> Send
          </button>
        </div>
      </form>
    </div>

    <div class="bg-gray-800 rounded-xl p-6 shadow-lg">
      <h2 class="text-xl font-semibold mb-4 flex items-center justify-between">
        <span><i class="fas fa-code mr-2 text-blue-400"></i> Console Output</span>
        <div class="flex space-x-2">
          <button id="clear-console" class="text-sm bg-gray-700 hover:bg-gray-600 px-3 py-1 rounded"><i class="fas fa-trash"></i></button>
          <button id="copy-console" class="text-sm bg-gray-700 hover:bg-gray-600 px-3 py-1 rounded"><i class="fas fa-copy"></i></button>
        </div>
      </h2>
      <div id="console" class="console p-4 rounded-lg h-64 overflow-y-auto scrollbar-hide whitespace-pre-wrap">
        <div class="text-gray-500">Ready...</div>
      </div>
    </div>
  </div>

  <script>
    // Simple client-side scripts: loadProfile(), console clear, etc.
    function loadProfile() {
      const name = document.getElementById('profile').value;
      if (!name) return;
      fetch(`/get_server/${name}`).then(r => r.json()).then(data => {
        document.getElementById('host').value = data.host || '';
        document.getElementById('port').value = data.port || '';
        document.getElementById('password').value = data.password || '';
      });
    }
    document.getElementById('clear-console')?.addEventListener('click', () => {
      document.getElementById('console').innerHTML = '<div class="text-gray-500">Console cleared.</div>';
    });
  </script>
</body>
</html>
